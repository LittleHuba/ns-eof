<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <flow Re="1000" />
    <simulation finalTime="5" >
        <type>dns</type>
        <scenario>channel</scenario>
    </simulation>
    <timestep dt="1" tau="0.5" />
   <solver gamma="0.5" />     <geometry dim="2" lengthX="5.0" lengthY="1.0" lengthZ="1.0" sizeX="1000" sizeY="2000" sizeZ="1">
      <mesh>uniform</mesh>
    </geometry>
    <environment gx="0" gy="0" gz="0" />
    <walls>
        <left>
            <vector x="0" y="0" z="0" />
        </left>
        <right>
            <vector x="0" y="0" z="0" />
        </right>
        <top>
            <vector x="1" y="0" z="0" />
        </top>
        <bottom>
            <vector x="0" y="0" z="0" />
        </bottom>
        <front>
            <vector x="0" y="0" z="0" />
        </front>
        <back>
            <vector x="0" y="0" z="0" />
        </back>
    </walls>
    <vtk interval="0.01">channel_result</vtk>
    <stdOut interval="10" />
     <parallel numProcessorsX="5" numProcessorsY="10" numProcessorsZ="1" />
</configuration>